# App
AUTH_SECRET=changeme-long-random-string           # generate per project
AUTH_TRUST_HOST=true                              # or set `trustHost: true` in Auth.js config
NEXTAUTH_URL=http://localhost:3000                # set to your prod URL in production

# Database (Supabase Postgres connection string)
# Use Session Pooler for DATABASE_URL; URL-encode special chars in password; add sslmode=require
DATABASE_URL=postgresql://USER:PASSWORD@POOLER_HOST:6543/postgres?pgbouncer=true&connection_limit=1&sslmode=require
# Optional: direct (non-pooled) URL for Prisma Migrate (often IPv6-only)
DIRECT_URL=postgresql://USER:PASSWORD@DB_HOST:5432/postgres?sslmode=require

# Supabase client (public)
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key

# Resend (for magic-link emails)
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM="App Team <no-reply@auth.example.com>"   # replace per project

# Stripe
STRIPE_SECRET_KEY=sk_live_or_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_or_test_...
NEXT_PUBLIC_STRIPE_PRICE_ID=price_123
NEXT_PUBLIC_SITE_URL=http://localhost:3000           # your public URL in prod
STRIPE_PORTAL_CONFIGURATION_ID=pc_123...

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=phc_...
# Optional: use EU or US host (default US)
# US: https://us.i.posthog.com  |  EU: https://eu.i.posthog.com
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

